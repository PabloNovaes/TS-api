{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@useCases/*": ["useCases/*"],
      "@interfaces/*": ["interfaces/*"],
      "@repositories/*": ["repositories/*"],
      "@controllers/*": ["./infra/http/controllers/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true
  }
}
